<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#263238"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:id="@+id/btnBack"
                android:background="@drawable/back_icon"
                android:layout_gravity="center_vertical"
                android:onClick="btnBack"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="34dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="previous"
                        android:textSize="28dp"
                        android:id="@+id/previous_tv" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/layout_border"
        >


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            >

            <Button
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:textSize="24dip"
                android:text="1"
                android:id="@+id/btnLevel_1"
                style="@style/button"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="8dp" />

            <Button
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:textSize="24dip"
                android:text="2"
                android:id="@+id/btnLevel_2"
                style="@style/button"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" />

            <Button
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:textSize="24dip"
                android:text="3"
                android:id="@+id/btnLevel_3"
                style="@style/button"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <Button
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:textSize="24dip"
                android:text="4"
                android:id="@+id/btnLevel_4"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="0dp"
                style="@style/button" />
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            >

            <Button
                style="@style/button"
                android:layout_width="54dp"
                android:layout_height="54dp"

                android:text="@string/plus"
                android:textSize="24dp"
                android:id="@+id/btnPlus"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="8dp" />

            <Button
                style="@style/button"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:text="@string/minus"
                android:textSize="24dp"
                android:id="@+id/btnMinus"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <Button
                style="@style/button"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:text="@string/multiple"
                android:textSize="24dp"
                android:id="@+id/btnMultiple"

                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <Button
                style="@style/button"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:text="@string/divide"
                android:textSize="24dp"
                android:id="@+id/btnDivide"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="8dp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_weight="0.8"
        android:background="#ECEFF1"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:textSize="48dp"
                android:textColor="#37474F"
                android:id="@+id/tvFirstInt" />

            <TextView
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=" operation "
                android:textSize="48dp"
                android:textColor="#37474F"

                android:id="@+id/tvOperation" />

            <TextView
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:textSize="48dp"
                android:textColor="#37474F"
                android:id="@+id/tvSecondInt" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="answer"
                android:textSize="48dp"
                android:textColor="#37474F"
                android:id="@+id/answer" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/layout_border">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            >

            <Button
                style="@style/button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="8dp"
                android:text="1"
                android:id="@+id/button_1"
                />

            <Button
                style="@style/button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="2"
                android:id="@+id/button_2"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" />

            <Button
                style="@style/button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="3"
                android:id="@+id/button_3"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <Button
                style="@style/button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="0dp"
                android:text="4"
                android:id="@+id/button_4" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            >

            <Button
                style="@style/button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="8dp"
                android:text="5"
                android:id="@+id/button_5"
                />

            <Button
                style="@style/button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="6"
                android:id="@+id/button_6"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" />

            <Button
                style="@style/button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="7"
                android:id="@+id/button_7"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <Button
                style="@style/button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="0dp"
                android:text="8"
                android:id="@+id/button_8" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            >

            <Button
                style="@style/button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="8dp"
                android:text="9"
                android:id="@+id/button_9"
                />

            <Button
                style="@style/button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="0"
                android:id="@+id/button_0"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" />

            <Button
                style="@style/button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:textSize="36dip"
                android:text="-"
                android:id="@+id/button_minus"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <Button
                style="@style/button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:textSize="36dip"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="0dp"
                android:text="@string/dell"
                android:id="@+id/button_back" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>